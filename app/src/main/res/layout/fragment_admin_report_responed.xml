<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:visibility="visible"
    tools:ignore="ExtraText">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_replay_essay"
        style="@style/genericEditText"
        android:layout_width="411dp"
        android:layout_height="297dp"
        android:layout_marginBottom="34dp"
        android:orientation="vertical"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:hintAnimationEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/send_report_nutri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="372dp"
            android:layout_height="265dp"
            android:background="@drawable/spinnerforreason"
            android:gravity="fill_horizontal"
            android:hint="Write Your Replay Here"
            android:inputType="textImeMultiLine"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/send_report_nutri"
        style="@style/genericButton"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="114dp"
        android:backgroundTint="@color/green3"
        android:text="@string/send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:enabled="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_admin_name_resp"
        style="@style/genericEditText"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:layout_marginTop="22dp"
        android:hint="Admin Name"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome6">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="368dp"
            android:layout_height="54dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <include
        android:id="@+id/view_toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="111dp"
        android:fontFamily="@font/bree_serif"
        android:text="Report Replay"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/bree_serif"
        android:text="Replay Essay"
        android:textColor="@color/dark_green1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_replay_essay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_admin_title_resp"
        style="@style/genericEditText"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:hint="@string/report_Title"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_admin_name_resp">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="368dp"
            android:layout_height="54dp" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
