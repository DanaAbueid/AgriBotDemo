<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    tools:context=".screens.UserMyProfileFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="375dp"
            android:layout_height="209dp"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/green7_background" />

        <include
            android:id="@+id/view_toolbar"
            layout="@layout/view_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_my_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="36dp"
            android:fontFamily="@font/bree_serif"
            android:text="Plan Information"
            android:textAlignment="viewStart"
            android:textColor="@color/light_gray"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cv_general_info"
            android:layout_width="333dp"
            android:layout_height="355dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rounded_corner_background2" />

        <TextView
            android:id="@+id/general_headlin_info2"
            android:layout_width="290dp"
            android:layout_height="44dp"
            android:layout_marginTop="104dp"
            android:fontFamily="@font/bree_serif"
            android:text="- Weed killing functionality.  "
            android:textAlignment="viewStart"
            android:textColor="@color/dark_green1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_general_info"
            app:layout_constraintStart_toStartOf="@+id/cv_general_info"
            app:layout_constraintTop_toTopOf="@+id/cv_general_info" />

        <TextView
            android:id="@+id/tv_welcome10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/bree_serif"
            android:text="Standard"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_green1"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_general_info"
            app:layout_constraintHorizontal_bias="0.076"
            app:layout_constraintStart_toStartOf="@+id/cv_general_info"
            app:layout_constraintTop_toTopOf="@+id/cv_general_info" />

        <TextView
            android:id="@+id/general_headlin_info"
            android:layout_width="294dp"
            android:layout_height="73dp"
            android:layout_marginTop="148dp"
            android:fontFamily="@font/bree_serif"
            android:text="- Soil moisture and temperature monitoring."
            android:textAlignment="viewStart"
            android:textColor="@color/dark_green1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_general_info"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="@+id/cv_general_info"
            app:layout_constraintTop_toTopOf="@+id/cv_general_info" />

        <TextView
            android:id="@+id/general_headlin_info3"
            android:layout_width="293dp"
            android:layout_height="83dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/bree_serif"
            android:text="- Real time crop health monitoring and disease detection. "
            android:textAlignment="viewStart"
            android:textColor="@color/dark_green1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/cv_general_info"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toStartOf="@+id/cv_general_info"
            app:layout_constraintTop_toTopOf="@+id/cv_general_info" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_prices"
            android:layout_width="353dp"
            android:layout_height="243dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="648dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="72dp"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>