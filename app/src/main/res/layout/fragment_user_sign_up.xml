<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    tools:context=".screens.UserSignUpFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">


        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="416dp"
            android:layout_height="166dp"
            android:src="@drawable/green7_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/view_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="384dp"
            android:layout_height="237dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="7dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/signup" />

        <TextView
            android:id="@+id/tv_welcome2"
            android:layout_width="363dp"
            android:layout_height="56dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bree_serif"
            android:text="Welcome!"
            android:textAlignment="viewStart"
            android:textColor="@color/dark_green1"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/til_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/button_login2"
            style="@style/genericButton"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="924dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/green3"
            android:enabled="true"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:enabled="true" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_serial_number"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="832dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:hint="Robot Serial Number"
            app:layout_constraintBottom_toTopOf="@+id/button_login2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextUsername2"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="349dp"
                android:layout_height="65dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/email"
            app:layout_constraintBottom_toTopOf="@+id/til_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmail"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="348dp"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="First Name"
            app:layout_constraintBottom_toTopOf="@+id/til_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextName"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="350dp"
                android:layout_height="65dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_username"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="605dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Last Name"
            app:layout_constraintBottom_toTopOf="@+id/til_phone_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextLastName"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="348dp"
                android:layout_height="65dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_password"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="455dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/password"
            app:endIconMode="password_toggle"
            app:layout_constraintBottom_toTopOf="@+id/til_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/ic_baseline_lock_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPassword"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="348dp"
                android:layout_height="65dp"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone_number"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="681dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="@string/phone_number"
            app:layout_constraintBottom_toTopOf="@+id/til_farm_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextPhoneNumber"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="346dp"
                android:layout_height="65dp"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_farm_location"
            style="@style/genericEditText"
            android:layout_width="380dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="757dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Search For Location"
            app:layout_constraintBottom_toTopOf="@+id/til_serial_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/location">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/til_farm_card"
                style="@style/genericMaterialTextInputEditText"
                android:layout_width="347dp"
                android:layout_height="65dp"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>