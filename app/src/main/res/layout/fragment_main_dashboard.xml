<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".screens.MainDashboardFragment"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">

    <TextView
        android:id="@+id/tv_summary2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="168dp"
        android:fontFamily="@font/bree_serif"
        android:text="Notifications Center"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_welcome5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="146dp"
        android:fontFamily="@font/bree_serif"
        android:text="Dashboard"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/view_toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="87dp"
        android:layout_height="38dp"
        android:layout_marginStart="299dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backforadmin" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="48dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@drawable/power_off" />

    <Button
        android:id="@+id/btn_crops"
        style="@style/genericButton"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="274dp"
        android:text="Crops"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_soil"
        style="@style/genericButton"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="157dp"
        android:text="Soil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_task"
        style="@style/genericButton"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginStart="274dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="41dp"
        android:text="Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="341dp"
        android:layout_height="86dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="462dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backforadmin" />

    <TextView
        android:id="@+id/tv_summary3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="211dp"
        android:fontFamily="@font/bree_serif"
        android:text="Crops Condition"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_condition_label"
        android:layout_width="159dp"
        android:layout_height="27dp"
        android:layout_marginStart="68dp"
        android:fontFamily="@font/bree_serif"
        android:text="Healthy Crops"
        android:textAlignment="viewStart"
        android:textColor="@color/green3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.283" />

    <TextView
        android:id="@+id/tv_condition_text"
        android:layout_width="83dp"
        android:layout_height="23dp"
        android:layout_marginStart="76dp"
        android:fontFamily="@font/bree_serif"
        android:text="16"
        android:textAlignment="viewStart"
        android:textColor="@color/green5"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.682" />

    <TextView
        android:id="@+id/tv_image_condition"
        android:layout_width="70dp"
        android:layout_height="36dp"
        android:layout_marginEnd="15dp"
        android:drawableStart="@drawable/plant_line"
        android:fontFamily="@font/bree_serif"
        android:text="30%"
        android:textAlignment="center"
        android:textColor="@color/green5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_notifications"
        android:layout_width="390dp"
        android:layout_height="286dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="35dp"
        android:paddingHorizontal="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:id="@+id/iv_condition"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:srcCompat="@drawable/plant_bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

