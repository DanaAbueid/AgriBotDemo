<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_20sdp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_plan_describtion"
            android:layout_width="159dp"
            android:layout_height="81dp"
            android:layout_marginStart="204dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/bree_serif"
            android:text="Premium: Working towards a weed-free, sustainable farm and advanced soil and crop health management? Tap for more info!"
            android:textAlignment="center"
            android:textColor="@color/green3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="122dp"
            android:layout_height="43dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="224dp"
            android:layout_marginBottom="36dp"
            android:fontFamily="@font/bree_serif"
            android:text="From 15$"
            android:textAlignment="center"
            android:textColor="@color/green5"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_plan_year"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="239dp"
            android:fontFamily="@font/bree_serif"
            android:text="1 Day"
            android:textAlignment="center"
            android:textColor="@color/LIGHTER_gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_plan_describtion"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/next_ltr__1_" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>