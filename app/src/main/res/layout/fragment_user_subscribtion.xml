<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <Button
        android:id="@+id/tv_button_next_pay"
        style="@style/genericButton"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="45dp"
        android:backgroundTint="@color/green3"
        android:enabled="true"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:enabled="true" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cv_sub_image"
        android:layout_width="405dp"
        android:layout_height="234dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="65dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/subscreption" />

    <ImageView
        android:id="@+id/cv_plan_back1"
        android:layout_width="364dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Subscription_Plan"
        app:srcCompat="@drawable/backforadmin" />

    <ImageView
        android:id="@+id/cv_plan_back2"
        android:layout_width="364dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_plan_back1"
        app:srcCompat="@drawable/backforadmin" />

    <TextView
        android:id="@+id/tv_Subscription_Plan"
        android:layout_width="363dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bree_serif"
        android:text="Subscription Plan "
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_sub_image" />

    <TextView
        android:id="@+id/tv_price1"
        android:layout_width="119dp"
        android:layout_height="58dp"
        android:fontFamily="@font/bree_serif"
        android:text="250$"
        android:textAlignment="center"
        android:textColor="@color/green5"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back1"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back1"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back1"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back1"
        app:layout_constraintVertical_bias="0.15" />

    <TextView
        android:id="@+id/tv_plan_describtion1"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:fontFamily="@font/bree_serif"
        android:text="Experience a weed-free future on your farm and more with Agribot. Try it now!"
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back1"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back1"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back1"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back1"
        app:layout_constraintVertical_bias="0.409" />

    <TextView
        android:id="@+id/tv_price2"
        android:layout_width="119dp"
        android:layout_height="58dp"
        android:fontFamily="@font/bree_serif"
        android:text="450$"
        android:textAlignment="center"
        android:textColor="@color/green5"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back2"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back2"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back2"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back2"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/tv_plan_year1"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:fontFamily="@font/bree_serif"
        android:text="1 Year"
        android:textAlignment="center"
        android:textColor="@color/LIGHTER_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back1"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back1"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back1"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back1"
        app:layout_constraintVertical_bias="0.807" />

    <TextView
        android:id="@+id/tv_plan_year2"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:fontFamily="@font/bree_serif"
        android:text="2 Year"
        android:textAlignment="center"
        android:textColor="@color/LIGHTER_gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back2"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back2"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back2"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back2"
        app:layout_constraintVertical_bias="0.867" />

    <TextView
        android:id="@+id/tv_plan_describtion2"
        android:layout_width="132dp"
        android:layout_height="72dp"
        android:fontFamily="@font/bree_serif"
        android:text="Want to save more? this plan is perfect for you. Try it now!"
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_plan_back2"
        app:layout_constraintEnd_toEndOf="@+id/cv_plan_back2"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="@+id/cv_plan_back2"
        app:layout_constraintTop_toTopOf="@+id/cv_plan_back2"
        app:layout_constraintVertical_bias="0.565" />
</androidx.constraintlayout.widget.ConstraintLayout>