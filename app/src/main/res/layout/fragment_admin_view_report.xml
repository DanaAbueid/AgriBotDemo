<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:visibility="visible"
    tools:ignore="ExtraText">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_report_reason_get"
        style="@style/genericEditText"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:enabled="false"
        android:hint="Reaport Reason"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_report_title_get">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="368dp"
            android:layout_height="54dp"
            android:editable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/report_title_1"
        style="@style/genericEditText"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:layout_marginTop="22dp"
        android:enabled="false"
        android:hint="User Email"
        android:visibility="visible"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome6">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="368dp"
            android:layout_height="54dp"
            android:editable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_report_title_get"
        style="@style/genericEditText"
        android:layout_width="402dp"
        android:layout_height="65dp"
        android:enabled="false"
        android:hint="@string/report_Title"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_title_1">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="368dp"
            android:layout_height="54dp"
            android:editable="false" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_welcome6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="244dp"
        android:fontFamily="@font/bree_serif"
        android:text="Report"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_green1"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_toolbar" />

    <include
        android:id="@+id/view_toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_report_essay_get"
        style="@style/genericEditText"
        android:layout_width="411dp"
        android:layout_height="297dp"
        android:layout_marginBottom="10dp"
        android:enabled="false"
        android:orientation="vertical"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeWidth="0dp"
        app:hintAnimationEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/send_report_nuytri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/genericMaterialTextInputEditText"
            android:layout_width="372dp"
            android:layout_height="265dp"
            android:background="@drawable/spinnerforreason"
            android:enabled="false"
            android:gravity="fill_horizontal"
            android:hint="Write Your Report Here"
            android:inputType="textImeMultiLine"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/send_report_nuytri"
        style="@style/genericButton"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/green3"
        android:text="Replay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:enabled="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/bree_serif"
        android:text="Report Essay"
        android:textColor="@color/dark_green1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_report_essay_get"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
